{
  "name": "connected-car-poc",
  "description": "Connected Car POC that uses the Reekoh IoT Application Integration Platform. For use in demos.",
  "version": "1.0.0",
  "main": "main.js",
  "author": "Reekoh, Inc.",
  "license": "MIT",
  "scripts": {
    "start": "node ./start-electron.js",
    "clr_start": "sudo /etc/init.d/nscd restart && node ./start-electron.js",
    "build": "rm -rf dist/ && npm run build:dar && npm run build:lin && npm run build:win",
    "build:lin": "electron-packager . gps --platform=linux --arch=x64 --out=dist --asar --overwrite",
    "build:win": "electron-packager . gps --platform=win32 --arch=x64 --out=dist --asar --overwrite",
    "build:dar": "electron-packager . gps --platform=darwin --arch=x64 --out=dist --asar --overwrite"
  },
  "dependencies": {
    "async": "^1.5.2",
    "body-parser": "^1.15.2",
    "chance": "^1.0.3",
    "consolidate": "^0.14.1",
    "electron-prebuilt": "^0.36.12",
    "express": "^4.14.0",
    "moment": "^2.14.1",
    "mongoose": "^4.5.6",
    "request": "^2.74.0",
    "serve-favicon": "~2.3.0",
    "swig": "^1.4.2"
  },
  "devDependencies": {
    "adal-node": "https://github.com/Reekoh/azure-activedirectory-library-for-nodejs/archive/master.tar.gz",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-csslint": "^0.3.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-jshint": "^2.0.1",
    "gulp-json-lint": "^0.1.0",
    "gulp-livereload": "^3.8.1",
    "gulp-mocha": "^2.2.0",
    "gulp-nodemon": "^2.0.7",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3"
  }
}
